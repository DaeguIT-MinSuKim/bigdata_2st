<mapper namespace="kr.or.dgit.bigdata.project.hairshop.mapper.CustomerMapper">
	<select id="selectByAll" resultType="customer">
		select cNo, cName, cDob, cDoJoin, cPhone from customer;
	</select>
	<!-- 고객의 이름을 가지고 검색할 때 경우에 따라 휴대폰 번호도 같이 검색조건에 들어갈 수 있도록 if문 추가 ver.유진 -->
	<select id="selectByName" resultType="customer">
		select cNo, cName, cDob, cDoJoin, cPhone from customer 
		where cName=#{cName}
		<if test="cPhone != null">
			and cPhone like #{cPhone}
		</if>
	</select>
	
